<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgblue"
    app:layout_editor_absoluteY="81dp">



        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_editor_absoluteX="0dp"
            app:layout_editor_absoluteY="0dp" />




        <!--title-->
        <TextView
            android:id="@+id/title_edit_water_bill"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:fontFamily="@font/thaisanslite"
            android:text="@string/title_edit"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_editor_absoluteX="109dp"
            app:layout_editor_absoluteY="7dp" />

        <TextView
            android:id="@+id/room_id_edit_water_bill"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/room_id"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.541"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintVertical_bias="0.068" />
        <!--หน่วยน้ำ-->
        <TextView
            android:id="@+id/water_meter_topic_edit_water_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="108dp"
            android:fontFamily="@font/thaisanslite"
            android:text="@string/topic_water_meter"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.165"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_editor_absoluteX="47dp"
            app:layout_editor_absoluteY="140dp" />


    <EditText
        android:id="@+id/water_meter_edit_water_bill"
        android:layout_width="190dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="108dp"
        android:background="@color/white"
        android:ems="10"
        android:fontFamily="@font/thaisanslite"
        android:hint="@string/text_enter_meters"
        android:inputType="numberDecimal"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.872"
        app:layout_constraintStart_toEndOf="@+id/water_meter_topic_edit_water_bill"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_editor_absoluteX="148dp"
        app:layout_editor_absoluteY="121dp" />


        <!--month-->
        <TextView
            android:id="@+id/month_topic_edit_water_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/thaisanslite"
            android:text="@string/topic_month"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.159"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/water_meter_topic_edit_water_bill"
            app:layout_editor_absoluteX="48dp"
            app:layout_editor_absoluteY="210dp" />


    <EditText
        android:id="@+id/month_meter_edit_water_bill"
        android:layout_width="134dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:background="@color/white"
        android:ems="10"
        android:fontFamily="@font/thaisanslite"
        android:hint="@string/text_enter_month"
        android:inputType="date"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toEndOf="@+id/month_topic_edit_water_bill"
        app:layout_constraintTop_toBottomOf="@+id/water_meter_edit_water_bill"
        app:layout_editor_absoluteX="148dp"
        app:layout_editor_absoluteY="199dp" />

        <!--date-->
    <TextView
        android:id="@+id/date_topic_edit_water_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/thaisanslite"
        android:text="@string/topic_date"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/month_topic_edit_water_bill"
        app:layout_editor_absoluteX="36dp"
        app:layout_editor_absoluteY="271dp" />


    <EditText
        android:id="@+id/date_meter_edit_water_bill"
        android:layout_width="140dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:background="@color/white"
        android:ems="10"
        android:fontFamily="@font/thaisanslite"
        android:hint="@string/text_enter_record_date"
        android:inputType="date"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.391"
        app:layout_constraintStart_toEndOf="@+id/date_topic_edit_water_bill"
        app:layout_constraintTop_toBottomOf="@id/month_meter_edit_water_bill"
        app:layout_editor_absoluteX="148dp"
        app:layout_editor_absoluteY="257dp" />


        <!--submit btn-->
        <Button
            android:id="@+id/submit_btn_meter_edit_water_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/thaisanslite"
            android:text="@string/submit_btn"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            android:background="#6A83D1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.462"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_meter_edit_water_bill"
            app:layout_editor_absoluteX="148dp"
            app:layout_editor_absoluteY="345dp" />


        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_editor_absoluteY="7dp"
            app:srcCompat="@drawable/ic_action_back"
            />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="40dp"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.975"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_editor_absoluteY="8dp"
            app:srcCompat="@drawable/ic_action_exit"
            />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="43dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="260dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.966"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView15"
        app:layout_constraintVertical_bias="0.99"
        app:srcCompat="@android:drawable/ic_menu_today" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="37dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.017"
        app:srcCompat="@android:drawable/ic_menu_today" />


</android.support.constraint.ConstraintLayout>

