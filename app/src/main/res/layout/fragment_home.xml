<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/imageView"
                android:contentDescription="@string/des_img"
                android:layout_width="403dp"
                android:layout_height="215dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/plum_condo"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/resident_btn_home"
                android:layout_width="190dp"
                android:layout_height="53dp"
                android:layout_marginBottom="10dp"
                android:text="@string/resident_btn"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/staff_btn_home"
                android:layout_width="190dp"
                android:layout_height="53dp"
                android:layout_marginBottom="10dp"
                android:text="@string/staff_btn"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/legal_person_btn_home"
                android:layout_width="190dp"
                android:layout_height="53dp"
                android:text="@string/legal_person_btn"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>