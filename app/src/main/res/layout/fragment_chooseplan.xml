<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal">
            <!--title-->
            <TextView
                android:id="@+id/title_choose_plan"
                android:layout_width="250dp"
                android:layout_height="61dp"
                android:layout_marginTop="32dp"
                android:text="@string/title_choose_plan"
                app:autoSizeTextType="uniform"
                app:layout_editor_absoluteX="148dp"
                app:layout_editor_absoluteY="27dp" />

            <!--img plan-->
            <ImageView
                android:id="@+id/img_choose_plan"
                android:layout_width="244dp"
                android:layout_height="234dp"
                android:src="@drawable/plum_condo"
                app:layout_editor_absoluteX="76dp"
                app:layout_editor_absoluteY="66dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal">

            <!--phase-->
            <TextView
                android:id="@+id/topic_phase_choose_plan"
                android:layout_width="81dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:text="@string/topic_phase"
                app:autoSizeTextType="uniform"
                app:layout_editor_absoluteX="71dp"
                app:layout_editor_absoluteY="268dp"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="334dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout5"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                app:layout_editor_absoluteX="159dp"
                app:layout_editor_absoluteY="268dp"
                tools:layout_editor_absoluteX="159dp"
                tools:layout_editor_absoluteY="334dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/phase_choose_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/text_enter_phase" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal">

            <!--floor-->
            <TextView
                android:id="@+id/topic_floor_choose_plan"
                android:layout_width="71dp"
                android:layout_height="39dp"
                android:layout_gravity="bottom"
                android:text="@string/topic_floor"
                app:autoSizeTextType="uniform"
                app:layout_editor_absoluteX="71dp"
                app:layout_editor_absoluteY="321dp"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="420dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout3"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                app:layout_editor_absoluteX="159dp"
                app:layout_editor_absoluteY="328dp"
                tools:layout_editor_absoluteX="159dp"
                tools:layout_editor_absoluteY="392dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/floor_choose_plan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:hint="@string/text_enter_floor" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <!--submit-->
        <Button
            android:id="@+id/submit_btn_choose_plan"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/submit_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_editor_absoluteX="71dp"
            app:layout_editor_absoluteY="386dp"
            tools:layout_editor_absoluteY="459dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>